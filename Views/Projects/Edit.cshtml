@model Project;

@{
    ViewData["Title"] = "Edit project";
}

<form asp-controller="Projects" asp-action="Edit" method="post">
    <input asp-for="id" visible=false hidden>
    <p>Edit project :</p>
    <label>Name:</label><br />
    <input asp-for="name" /><br />
    <label>Description:</label><br />
    <input asp-for="description" /><br />
    <br />
    <select id="my-select" asp-for="membersId" asp-items="@ViewBag.usersList" multiple="multiple"></select>
    <br />
    <input type="Submit" value="Save"/>
</form>

@section scripts {
    <link href="~/css/multi-select.css" media="screen" rel="stylesheet" type="text/css">
    <script src="~/js/jquery.multi-select.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#my-select').multiSelect(
            {
                selectableHeader: "<div class='custom-header'>Select members:</div>",
                selectionHeader: "<div class='custom-header'>Selected memebers:</div>"
            })
    </script>
}