@model Project

<form asp-controller="Projects" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input id="name" class="form-control" asp-for="name" maxlength="30"/>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" class="form-control" asp-for="description" maxlength="100"></textarea>
    </div>
    <div class="form-group">
        <label>Choose project members :</label><br />
        <select class="my-select" asp-for="membersId" asp-items="@ViewBag.usersList" multiple="multiple"></select>
    </div>
    <br />
    <input class="btn btn-success" type="Submit" value="Create"/>
</form>