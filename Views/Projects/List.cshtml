@model IEnumerable<Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="text-center">
    <h1 class="display-4">Projects</h1>
</div>
<div>
    @if (service.user.role is ProjectManager)
    {
        <a asp-controller="Projects" asp-action="Create">Create new project</a>
    }
</div>
<div>
    @foreach (var project in Model)
    {
        <h1>@project.name</h1>
        <h5>@project.description</h5>
        <h5>Members:</h5>
        foreach (var memberId in project.membersId!)
        {
            <h7>@memberId</h7>
        }
        if (service.user.role is ProjectManager)
        {
            <br /><a asp-controller="Projects"
                asp-action="Delete"
                asp-route-id="@project.id">Delete project</a>
        }
    }
</div>