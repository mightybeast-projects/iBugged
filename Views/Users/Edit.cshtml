@model User;

<form asp-controller="Users" asp-action="Edit" method="post">
    <input asp-for="id" visible=false hidden>
    <input asp-for="email" visible=false hidden>
    <input asp-for="password" visible=false hidden>
    <div class="form-group">
        <label for="name">Username :</label>
        <input id="name" class="form-control" asp-for="name" maxlength="30"/>
    </div>
    <div class="form-group">
        <label for="role">Role :</label>
        <select id="role" class="form-select" asp-for="role" asp-items="Html.GetEnumSelectList<Role>()"></select>
    </div><br />
    <input class="btn btn-success" type="Submit" value="Save"/>
</form>