<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - iBugged</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/iBugged.styles.css" asp-append-version="true" />
    <link href="~/css/multi-select.css" media="screen" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
    <link rel="stylesheet" href="~/icons/css/all.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="nav-bar" class="nav flex-column navbar-light bg-white nav-fill">
            <div class="container-fluid">
                <label class="text-dark text-center">
                    <h4>
                        <i class="fa-solid fa-bug"></i>
                        iBugged
                    </h4>
                </label>
                @if (service.user is not null)
                {
                    <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Home">
                        <i class="fa-solid fa-table-columns"></i> Dashboard
                    </a>
                    <a class="nav-link text-dark" asp-controller="Projects" asp-action="List">
                        <i class="fa-solid fa-diagram-project"></i> Projects
                    </a>
                    <a class="nav-link text-dark" asp-controller="Tickets" asp-action="List">
                        <i class="fa-solid fa-ticket"></i> Tickets
                    </a>
                    @if (service.user.role is ProjectManager)
                    {
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="List">
                            <i class="fa-solid fa-users"></i> Users
                        </a>
                    }
                    <div id="user-info">
                        <label class="text-dark">
                            <i class="fa-solid fa-user"></i> @service.user.name
                        </label>
                        <a class="nav-link text-dark" asp-controller="Access" asp-action="LogOut">
                            <i class="fa-solid fa-right-from-bracket"></i> Log Out
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.multi-select.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
