@model User;

@{
    Layout = null;
    ViewData["Title"] = "Create new user";
}

<meta name='viewport' content='width=device-width, initial-scale=1.0'/>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/icons/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/google-sign-in.css" />

<body>
    <div class="center-div">
        <h3 class="text-center">
            <i class="fa-solid fa-bug"></i>
            iBugged
        </h3>
        <h5 class="text-center">Create new user</h5>
        <form id="registration-form" asp-controller="Access" asp-action="Register" method="post">
            <div class="form-group">
                <input id="name" class="form-control" asp-for="name" maxlength="20" placeholder="Username" required/>
            </div>
            <input id="email" class="form-control" asp-for="email" hidden/>
            <input id="password" class="form-control" asp-for="password" hidden/>
            <div class="form-group">
                <select id="role" class="form-select" asp-for="role" asp-items="Html.GetEnumSelectList<Role>()" required>
                    <option value="" disabled selected hidden>Select user role</option>
                </select>
            </div>
            <input id="register-btn" class="btn btn-success" type="Submit" value="Register" />
        </form>
    </div>
</body>